<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SRSS" parent="BaseSRSSStyle">
        <item name="colorPrimary">@color/red_light</item>
        <item name="colorPrimaryVariant">@color/red_dark</item>
    </style>

    <style name="BaseSRSSStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/default_background</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorControlNormal">@color/default_background_inverted</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:textViewStyle">@style/DefaultTextViewStyle</item>
        <item name="toolbarStyle">@style/DefaultToolbarStyle</item>
    </style>

    <style name="DefaultTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/default_background_inverted</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SRSSRegularButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/selector_gradient_button</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="DefaultToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="titleTextColor">@color/default_background_inverted</item>
        <item name="titleTextAppearance">@style/ToolbarTextTitleAppearance</item>
    </style>

    <style name="ToolbarTextTitleAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ImageViewRoundedAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
</resources>